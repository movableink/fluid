{{#let (if @hasError "text-red-600" (if @hasWarning "text-orange-600")) as |textColorStyle|}}
  <input
    id={{@id}}
    class="placeholder-neutral-600 outline-none rounded flex-grow py-1 px-2
      {{textColorStyle}}
      {{if @disabled "cursor-not-allowed"}}"
    type={{@type}}
    value={{@value}}
    placeholder={{@placeholder}}
    disabled={{@disabled}}
    ...attributes
    {{did-insert @onInsert}}
  />
{{/let}}
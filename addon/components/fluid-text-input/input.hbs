<input
  id={{@id}}
  class="border-none outline-none ring-none placeholder-neutral-600 bg-transparent rounded-lg flex-grow py-1 px-2
    {{textColorStyle}}
    {{if @disabled "cursor-not-allowed"}}"
  type={{@type}}
  value={{@value}}
  placeholder={{@placeholder}}
  disabled={{@disabled}}
  ...attributes
  {{did-insert @onInsert}}
/>